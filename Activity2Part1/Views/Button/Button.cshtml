@model List<Activity2Part1.Models.ButtonModel>

@{
    ViewBag.Title = "Activity 2";
    Layout = "~/Views/Shared/_MyDefaultLayout.cshtml";
}

<div>
    <p class="label1">
        @Html.Label("Welcome to Razor")
    </p>
    <p class="label2">
        @Html.Label("Play with Buttons")
    </p>
    @using (Html.BeginForm("OnButtonClick", "Button"))
    {
        for (int i = 0; i < Model.Count; i++)
        {
            if (i % 5 == 0)
            {
                <br />
            }

            <button type="submit" name="mine" value=@i>
                @if (Model[i].State == true)
                {
                    <img src="~/Images/on.jpg" />
                }
                else
                {
                    <img src="~/Images/off.jpg" />
                }
            </button>
        }
    }

</div>
